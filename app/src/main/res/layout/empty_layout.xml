<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/empty_rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/final_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_24"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:textColor="#ff868da7"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/status_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/final_tip_tv"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        tools:src="@mipmap/no_order_record" />

    <TextView
        android:id="@+id/bottom_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_iv"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="#ff868da7"
        android:textSize="14sp"
        tools:text="asdadasd" />

    <TextView
        android:id="@+id/other_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bottom_tip_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_8"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center_horizontal"
        android:text="见证签署——是支持多方共同参合约服务的在线签署，同时引入权威见证机构以具备完全法律效力的专业合约签章平台。"
        android:textColor="#ff39425f"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/load_view_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:indeterminateDrawable="@drawable/load_loading"
                android:padding="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:text="正在加载..."
                android:textColor="@color/color_7c7c7c"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
