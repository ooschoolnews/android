<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/homepage_list_item_bg"
    android:padding="@dimen/dp_12">


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_toRightOf="@+id/class_iv"
        android:text="	如何让高德地图的marker标记自适应地图的缩放大小(Android)"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_18"
        android:layout_marginRight="@dimen/dp_40"
        android:singleLine="true"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/pinglun_tv"
        android:layout_width="wrap_content"
        android:text="11"
        android:layout_marginLeft="@dimen/dp_16"
        android:drawableLeft="@mipmap/pinglun"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/dianzan_tv"
        android:layout_width="wrap_content"
        android:text="22"
        android:layout_toRightOf="@+id/pinglun_tv"
        android:layout_marginLeft="@dimen/dp_40"
        android:drawableLeft="@mipmap/icon_dianzan_normal"
        android:layout_below="@+id/title_tv"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="wrap_content"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_right" />

</RelativeLayout>